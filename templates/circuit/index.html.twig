{% extends 'base.html.twig' %}

{% block body %}

    <!-- N A V B A R -->
    <section id="navbar">
        <div class="bg-navbar"></div>
        <nav class="navbar navbar-expand-md">
            <div class="container-fluid">
                <button class="navbar-toggler" 
                    type="button" 
                    data-bs-toggle="collapse" 
                    data-bs-target="#navbarNav" 
                    aria-controls="navbarNav" 
                    aria-expanded="false" 
                    aria-label="Toggle navigation">
                    <i class="fa-solid fa-bars" style="color: white; font-size: 1.5rem;"></i>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" href="{{ path('app_circuit') }}">Nos circuits privées</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_excursion') }}">Nos excursions privées</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_qui_sommes_nous') }}">Qui sommes-nous ?</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_contact') }}">Contacts</a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center">
                        <img src="/assets/image/icone-facebook.png" class="icone-facebook ms-3" alt="Icône Facebook">
                        <img src="/assets/image/icone-insta.png" class="icone-instagram ms-3" alt="Icône Instagram">
                    </div>
                </div>
            </div>
        </nav>
    </section>
    <!-- N A V B A R -->

    <!-- P I C T U R E - H E A D E R -->
    <section id="picture-header">
        <picture>
            <source srcset="/assets/image/picture-1-phone.jpg" media="(max-width: 768px)">
            <img src="/assets/image/picture-header-circuit.jpg" class="picture" alt="...">
        </picture>
        <div class="text-container">
            <div class="top-line">
                <p class="p-header">Découvrez nos</p>
                <img src="/assets/image/icone-logo.png" class="icone-logo" alt="..." style="width: 10%; height: auto;">
            </div>
            <h1 class="h-header">Circuits privées</h1>
        </div>
    </section>
    <!-- P I C T U R E - H E A D E R -->

    <!-- C O M M E N T -->
    {% include '_partials/comments.html.twig' with { 'commentaires': commentaires } %}
    <!-- C O M M E N T -->

    <!-- A R T I C L E - L E F T -->
    <section id="article-left" class="row">
       <img src="{{ asset('assets/image/' ~ article3.photo) }}" class="picture-article" alt="...">
        <img src="/assets/image/icone-palmier.png" class="icone-comment" alt="...">
        <div class="bg-article">
            <h1 class="t-article">{{ article3.titre }}</h1>
            <p class="p-article">{{ article3.description }}</p>
        </div>
    </section>
    <!-- A R T I C L E - L E F T -->

    <!-- C A R D S - C I R C U I T S -->
    <section id="cards-circuit" class="row">
        {% for circuit in circuits %}
            <div class="cards col-12 col-md-4 {% if not circuit.disponible %} unavailable {% endif %}">
                {% if not circuit.disponible %}
                    <div class="soon-icon">
                        <img src="/assets/image/icone-soon.png" class="icone-soon" alt="Bientôt disponible">
                    </div>
                {% endif %}
                <img src="{{ asset('assets/image/' ~ circuit.photoCards) }}" class="picture-cards" alt="...">
                <div class="bg-article">
                    <h1 class="t-article">{{ circuit.titreCards}}</h1>
                    <p class="p-article">{{ circuit.texteCards}}</p>
                    <div class="row col-12 col-md-11">
                        <div class="containt-info col-4">
                            <img src="/assets/image/icone-group.png" class="icone-info" alt="...">
                            <p class="p-info">Personnes :</p>
                            <p class="p-details">{{ circuit.nombrePersonnes}}</p>
                        </div>
                        <div class="containt-info col-4">
                            <img src="/assets/image/icone-clock.png" class="icone-info" alt="...">
                            <p class="p-info">Durée :</p>
                            <p class="p-details">{{ circuit.duree}}</p>
                        </div>
                        <div class="containt-info col-4">
                            <img src="/assets/image/icone-price.png" class="icone-info" alt="...">
                            <p class="p-info">A partir de :</p>
                            <p class="p-details">{{ circuit.prix}} €</p>
                        </div>
                    </div>
                    <a href="{{ path('circuit_detail', {'id': circuit.id}) }}" class="btn">En savoir plus</a>
                </div>
            </div>
        {% endfor %}
    </section>
    <!-- C A R D S - C I R C U I T S -->

    <!-- A R T I C L E - C O N T A C T -->
    <section id="article-contact" class="row">
        <div class="bg-article order-2 order-md-1">
            <div class="contact-phone">
                <img src="/assets/image/icone-phone.png" class="icone-info" alt="...">
                <h1 class="t-article">Téléphone :</h1>
                <p class="p-article">Vous pouvez nous appeler du lundi au vendredi, de 9h à 17h, pour toute information. Notre équipe est à votre écoute et prête à répondre à vos questions.
                </p>
                <p class="contact-info">{{ contact.telephone }}</p>
            </div>
            <div class="contact-mail">
                <img src="/assets/image/icone-mail.png" class="icone-info" alt="...">
                <h1 class="t-article">Adresse e-mail</h1>
                <p class="p-article">Vous pouvez nous contacter par e-mail à tout moment, selon vos besoins. Nous vous répondrons dans les plus brefs délais avec plaisir.
                </p>
                <p class="contact-info">{{ contact.messagerie }}</p>
            </div>
        </div>
        <img src="/assets/image/picture-contact.jpg" class="picture-article order-1 order-md-2" alt="...">
    </section>
    <!-- A R T I C L E - C O N T A C T -->

    <!-- C O M M E N T - F O O T E R -->
    {% include '_partials/comments-footer.html.twig' with { 'commentaires': commentaires } %}
    <!-- C O M M E N T - F O O T E R -->

    <!-- P I C T U R E - F O O T E R -->
    <section id="picture-footer">
        <picture>
            <source srcset="/assets/image/picture-1-phone.jpg" media="(max-width: 768px)">
            <img src="/assets/image/picture-footer.jpg" class="picture" alt="...">
        </picture>
    </section>
    <!-- P I C T U R E - F O O T E R -->

    <!-- F O O T E R -->
    <footer id="footer">
        <a href="/mentions-legales" class="footer-link">Mentions légales</a>
        <img src="/assets/image/icone-facebook-footer.png" class="icone-facebook" alt="Icône Facebook">
        <img src="/assets/image/icone-insta-footer.png" class="icone-instagram" alt="Icône Instagram">
    </footer>
    <!-- F O O T E R -->
    
{% endblock %}