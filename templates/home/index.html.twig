{% extends 'base.html.twig' %}
{% block title %}{{ title }}{% endblock %}
{% block body %}

    <!-- N A V B A R -->
    <section id="navbar">
        <div class="bg-navbar"></div>
            <a href="{{ path('app_home') }}">
                <img src="/uploads/logo-sahara.png" class="logo" alt="Logo Sahara-Escapade-Escapade">
            </a>
        <nav class="navbar navbar-expand-md">
            <div class="container-fluid">
                <button class="navbar-toggler" 
                    type="button" 
                    data-bs-toggle="collapse" 
                    data-bs-target="#navbarNav" 
                    aria-controls="navbarNav" 
                    aria-expanded="false" 
                    aria-label="Toggle navigation">
                    <i class="fa-solid fa-bars" style="color: white; font-size: 1.5rem;"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_circuit') }}">Nos circuits privés</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_excursion') }}">Nos excursions privées</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_qui_sommes_nous') }}">Qui sommes-nous ?</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_contact') }}">Contacts</a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center">
                        <a href="https://www.facebook.com/profile.php?id=61575221985456&locale=fr_FR" target="_blank" rel="noopener noreferrer">
                            <img src="/uploads/icone-facebook.png" class="icone-facebook ms-3" alt="Icône Facebook">
                        </a>
                        <a href="https://www.instagram.com/escapadesahara/" target="_blank" rel="noopener noreferrer">
                            <img src="/uploads/icone-insta.png" class="icone-instagram ms-3" alt="Icône Instagram">
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </section>
    <!-- N A V B A R -->

    <!-- P I C T U R E - H E A D E R -->
    <section id="picture-header">
        <picture>
            <source srcset="/uploads/picture-1-phone.jpg" media="(max-width: 768px)">
            <img src="/uploads/picture-header-index.jpg" class="picture" alt="Image de dunes au Maroc">
        </picture>
        <div class="text-container">
            <div class="top-line">
                <p class="p-header">Découvrez le Maroc avec</p>
                <img src="/uploads/icone-logo.png" class="icone-logo" alt="Icone d'un palmier">
            </div>
            <h1 class="h-header">Escapade Sahara.</h1>
        </div>
    </section>
    <!-- P I C T U R E - H E A D E R -->

    <!-- C O M M E N T -->
    {% include '_partials/comments.html.twig' with { 'commentaires': commentaires } %}
    <!-- C O M M E N T -->

    <!-- A R T I C L E - R I G H T -->
    <section id="article-right" class="row">
            <div class="bg-article order-2 order-md-1 col-4">
                <h1 class="t-article">{{ article1.titre }}</h1>
                <p class="p-article col-10">{{ article1.description }}</p>
            </div>
            <img src="{{ asset('uploads/' ~ article1.photo) }}" class="picture-article order-1 order-md-2 col-8" alt="{{ article1.titre }}">
            <img src="/uploads/icone-camel.png" class="icone-comment order-3" alt="Icone d'un palmier">
    </section>
    <!-- A R T I C L E - R I G H T -->

    <!-- A R T I C L E - L E F T -->
    <section id="article-left" class="row">
        <img src="{{ asset('uploads/' ~ article2.photo) }}" class="picture-article" alt="{{ article2.titre }}">
        <img src="/uploads/icone-palmier.png" class="icone-comment" alt="Icone d'un palmier">
        <div class="bg-article">
            <h1 class="t-article">{{ article2.titre }}</h1>
            <p class="p-article">{{ article2.description }}</p>
        </div>
    </section>
    <!-- A R T I C L E - L E F T -->

    <!-- C A R D S - I N D E X -->
    <section id="cards-index" class="row">
        <div class="cards col-12 col-md-4">
            <img src="/uploads/card-index-1.jpg" class="picture-cards" alt="Photo d'un 4x4 dans les dunes du Maroc">
            <img src="/uploads/icone-camel.png" class="icone-cards" alt="Icone d'un 4x4">
            <div class="bg-article">
                <h1 class="t-article">Nos circuits privées</h1>
                <p class="p-article">Découvrez nos circuits privés en 4x4 au départ de Marrakech. Partez à l'aventure à travers le sud du Maroc, explorez ses paysages exceptionnels, des dunes aux oasis, et vivez une expérience authentique au cœur du désert.
                </p>
                <button class="btn" onclick="window.location.href='{{ path('app_circuit') }}'">En savoir plus</button>
            </div>
        </div>
        <div class="cards col-12 col-md-4">
            <img src="/uploads/card-index-2.jpg" class="picture-cards" alt="Photo de trois chameaux">
            <img src="/uploads/icone-4x4.png" class="icone-cards" alt="Icone d'un palmier">
            <div class="bg-article">
                <h1 class="t-article">Nos excursions privées</h1>
                <p class="p-article">Partez en excursion privée au départ de Marrakech et explorez les merveilles du sud du Maroc. Des paysages grandioses, des villages berbères authentiques et une expérience unique vous attendent.
                </p>
                <button class="btn" onclick="window.location.href='{{ path('app_excursion') }}'">En savoir plus</button>
            </div>
        </div>
        <div class="cards col-12 col-md-4">
            <img src="/uploads/card-index-3.jpg" class="picture-cards" alt="Photo d'une maison typique marocaine">
            <img src="/uploads/icone-camp.png" class="icone-cards" alt="Icone d'un palmier">
            <div class="bg-article">
                <h1 class="t-article">Voyage de luxe</h1>
                <p class="p-article">Vivez un voyage privé sur mesure au départ de Marrakech. Explorez le désert marocain, ses dunes dorées et ses oasis secrètes, dans un confort absolu, loin des foules, pour une expérience inoubliable.
                </p>
                <button class="btn" onclick="window.location.href='{{ path('app_voyage_luxe') }}'">En savoir plus</button>
            </div>
        </div>
    </section>
    <!-- C A R D S - I N D E X -->

    <!-- A R T I C L E - C O N T A C T -->
    <section id="article-contact" class="row">
        <div class="bg-article order-2 order-md-1">
            <div class="contact-phone">
                <img src="/uploads/icone-phone.png" class="icone-info" alt="Icone d'un mobile">
                <h1 class="t-article">Téléphone :</h1>
                <p class="p-article">Vous pouvez nous appeler du lundi au vendredi, de 9h à 17h, pour toute information. Notre équipe est à votre écoute et prête à répondre à vos questions.
                </p>
                <p class="contact-info">{{ contact.telephone }}</p>
            </div>
            <div class="contact-mail">
                <img src="/uploads/icone-mail.png" class="icone-info" alt="Icone d'un mail">
                <h1 class="t-article">Adresse e-mail</h1>
                <p class="p-article">Vous pouvez nous contacter par e-mail à tout moment, selon vos besoins. Nous vous répondrons dans les plus brefs délais avec plaisir.
                </p>
                <p class="contact-info">{{ contact.messagerie }}</p>
            </div>
        </div>
        <img src="/uploads/picture-contact.jpg" class="picture-article order-1 order-md-2" alt="Photo d'une dunes marocaine">
    </section>
    <!-- A R T I C L E - C O N T A C T -->

    <!-- C O M M E N T - F O O T E R -->
    {% include '_partials/comments-footer.html.twig' with { 'commentaires': commentaires } %}
    <!-- C O M M E N T - F O O T E R -->

    <!-- P I C T U R E - F O O T E R -->
    <section id="picture-footer">
        <picture>
            <img src="/uploads/picture-footer.jpg" class="picture" alt="Photo d'un batiment au maroc">
        </picture>
    </section>
    <!-- P I C T U R E - F O O T E R -->

    <!-- F O O T E R -->
    {% include '_partials/footer.html.twig' %}
    <!-- F O O T E R -->
    
{% endblock %}