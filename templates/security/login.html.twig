{% extends 'base.html.twig' %}

{% block body %}

    <!-- N A V B A R -->
    <section id="navbar">
        <div class="bg-navbar"></div>
            <a href="{{ path('app_home') }}">
                <img src="/uploads/logo-sahara.png" class="logo" alt="Logo Sahara">
            </a>
        <nav class="navbar navbar-expand-md">
            <div class="container-fluid">
                <button class="navbar-toggler" 
                    type="button" 
                    data-bs-toggle="collapse" 
                    data-bs-target="#navbarNav" 
                    aria-controls="navbarNav" 
                    aria-expanded="false" 
                    aria-label="Toggle navigation">
                    <i class="fa-solid fa-bars" style="color: white; font-size: 1.5rem;"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_circuit') }}">Nos circuits privés</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_excursion') }}">Nos excursions privées</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_qui_sommes_nous') }}">Qui sommes-nous ?</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_contact') }}">Contacts</a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center">
                        <img src="/uploads/icone-facebook.png" class="icone-facebook ms-3" alt="Icône Facebook">
                        <img src="/uploads/icone-insta.png" class="icone-instagram ms-3" alt="Icône Instagram">
                    </div>
                </div>
            </div>
        </nav>
    </section>
    <!-- N A V B A R -->

    <!-- L O G I N -->
    <section id="security">
        <form action="{{ path('app_login') }}" method="post">
            <div>
                <label for="username">Email :</label>
                <input type="text" id="username" name="_username" value="{{ app.request.get('_username') }}" required />
            </div>
            <div>
                <label for="password">Mot de passe :</label>
                <input type="password" id="password" name="_password" required />
            </div>
            <button class="btn" type="submit">Se connecter</button>
        </form>
    </section>
    <!-- L O G I N -->
    
{% endblock %}
